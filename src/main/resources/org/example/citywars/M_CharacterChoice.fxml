<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.Cursor?>
<Pane prefHeight="1080" prefWidth="1920" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.citywars.M_CharacterChoice">
    <ImageView fx:id="backGroundIm" fitHeight="1080.0" fitWidth="1920.0"  />
   <Button alignment="CENTER" blendMode="SCREEN" contentDisplay="CENTER" layoutX="25.0" layoutY="20.0" mnemonicParsing="false" onAction="#GoToGameMainMenuButton" prefHeight="60.0" prefWidth="90.0" text="Back" textFill="#650349">
      <font>
         <Font size="20.0" />
      </font>
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
   </Button>
   <HBox layoutX="160.0" layoutY="250.0" prefHeight="404.0" prefWidth="1600.0">
      <children>
         <ImageView onMouseClicked="#choiceCh1"
                    onMouseEntered="#mouseInterCh1"
                    onMouseExited="#mouseExitCh1"
                    fx:id="imv1" fitHeight="400.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" />
         <ImageView onMouseClicked="#choiceCh2"
                    onMouseEntered="#mouseInterCh2"
                    onMouseExited="#mouseExitCh2"
                 fx:id="imv2" fitHeight="400.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" />
         <ImageView onMouseClicked="#choiceCh3"
                    onMouseEntered="#mouseInterCh3"
                    onMouseExited="#mouseExitCh3"
                 fx:id="imv3" fitHeight="400.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" />
         <ImageView onMouseClicked="#choiceCh4"
                    onMouseEntered="#mouseInterCh4"
                    onMouseExited="#mouseExitCh4"
                 fx:id="imv4" fitHeight="400.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" />
      </children>
   </HBox>

</Pane>
